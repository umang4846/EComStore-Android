<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.appprocessors.ecomstore">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activities.ActivityPayment"
            android:theme="@style/Theme.MyApp"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.facebook.accountkit.ApplicationName"
            android:value="@string/app_name" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/FACEBOOK_APP_ID" />
        <meta-data
            android:name="com.facebook.accountkit.ClientToken"
            android:value="@string/ACCOUNT_KIT_CLIENT_TOKEN" />

        <activity
            android:name=".activities.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.WelcomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/IntroTheme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".activities.LoginSignUp"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Shrine" />
        <activity
            android:name=".activities.SignIn"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Shrine"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".activities.SignUp"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Shrine"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CategoryProductsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ProductListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyApp" />
        <activity
            android:name=".activities.NotificationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyApp"/>
        <activity
            android:name=".activities.ProductDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".utils.CommonOptionMenu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.WishlistActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyApp"/>
        <activity
            android:name=".activities.AddAddressActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Shrine"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".activities.MyAccountActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyApp" />
        <activity
            android:name=".activities.EditProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyApp"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".activities.EmptyAddressActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.NotificationSettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MyOrdersActivity"
            android:label="My Orders"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyApp" />
        <activity
            android:name=".activities.AllCategoriesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SubCategoryProductActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MyAddressActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyApp" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="50a286fa857c39969130198960c6809baedb2ea6" />
    </application>

</manifest>