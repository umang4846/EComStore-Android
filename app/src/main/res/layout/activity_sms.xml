<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/md_grey_50"
        android:clipToPadding="false"
        android:padding="5dp"
        android:scrollbars="vertical"
        android:scrollingCache="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:weightSum="4.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_address_subdistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="SUB DISTRICT"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/md_grey_600" />

                <EditText
                    android:id="@+id/et_address_subdistrict"
                    style="@style/EditText_Flat_Grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_round_bg_white"
                    android:drawableEnd="@drawable/ic_expand_arrow"
                    android:focusable="false"
                    android:minHeight="25dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                     />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"/>

            <LinearLayout
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_address_city_town"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="VILLAGE"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/md_grey_600" />

                <EditText
                    android:id="@+id/et_address_city_town"
                    android:drawableEnd="@drawable/ic_expand_arrow"
                    style="@style/EditText_Flat_Grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_round_bg_white"
                    android:minHeight="25dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                     />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_address_home_no"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textAllCaps="true"
            android:text="@string/sup_address_home_no"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/gray" />

        <EditText
            android:id="@+id/et_address_home_no"
            android:inputType="text|textMultiLine"
            android:lines="2"
            android:maxLines="2"
            android:minLines="2"
            android:singleLine="true"
            style="@style/EditText_Flat_Grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_round_bg_white"
            android:minHeight="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="@string/sup_address_home_no"
            />

        <TextView
            android:id="@+id/tv_address_locality_area_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textAllCaps="true"
            android:text="@string/sup_address_locality_area_street"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/md_grey_600" />

        <EditText
            android:id="@+id/et_address_locality_area_street"
            android:hint="@string/sup_address_locality_area_street"
            android:inputType="text"
            android:singleLine="true"
            style="@style/EditText_Flat_Grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_round_bg_white"
            android:minHeight="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
             />

        <TextView
            android:id="@+id/tv_address_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textAllCaps="true"
            android:text="@string/sup_address_person_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/md_grey_600" />

        <EditText
            android:id="@+id/et_address_person_name"
            android:clickable="true"
            android:focusable="true"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="@string/sup_address_person_name"
            android:inputType="text"
            android:singleLine="true"
            style="@style/EditText_Flat_Grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_round_bg_white"
            android:minHeight="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
             />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:weightSum="4.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_address_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textAllCaps="true"
                    android:text="@string/sup_address_mobile"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/md_grey_600" />

                <EditText
                    android:id="@+id/et_address_mobile"
                    android:clickable="true"
                    android:digits="1234567890"
                    android:hint="@string/sup_address_mobile"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:singleLine="true"
                    style="@style/EditText_Flat_Grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_round_bg_white"
                    android:focusable="true"
                    android:minHeight="25dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                     />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"/>

            <LinearLayout
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_address_alter_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textAllCaps="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/sup_address_alter_mobile"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/md_grey_600" />

                <EditText
                    android:id="@+id/et_address_alter_mobile"
                    style="@style/EditText_Flat_Grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_round_bg_white"
                    android:minHeight="25dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:clickable="true"
                    android:digits="1234567890"
                    android:drawablePadding="5dp"
                    android:hint="@string/sup_address_alter_mobile"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:singleLine="true"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="0dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_address_type"
                    fontPath="fonts/Timeless-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/sup_address_type"
                    android:textSize="20sp"
                    tools:ignore="MissingPrefix" />

                <RadioGroup
                    android:id="@+id/rg_address_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_address_type_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Home (All day delivery)"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/rb_address_type_work"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Work (between 10 am - 5 pm)"
                        android:textSize="18sp" />

                </RadioGroup>


            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <Switch
            android:id="@+id/switch_default_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="5dp"
            android:text="Make as My Default Address"
            android:textColor="@color/gray"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_address_save_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shop_now_button"
            android:text="SAVE  &amp;  CONTINUE "
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    </LinearLayout>