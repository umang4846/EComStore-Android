<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center|center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_cart_image"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/intro_item2"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:scaleType="centerCrop" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="30dp"
                    app:initialNumber="1"
                    app:textSize="8sp"
                    android:elevation="8dp"
                    android:gravity="center|center_vertical|center_horizontal"
                    app:finalNumber="5"
                    app:textColor="@color/blue_adv"
                    app:backGroundColor="@color/white"
                    app:backgroundDrawable="@drawable/product_quantity_border"
                    android:id="@+id/cart_product_quantity"/>


            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_margin="3dp"
                        android:id="@+id/tv_name_product_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:maxLines="1"
                        android:text="Mi LED Smart TV 4A 80cm(32)"
                        android:textColor="@color/black"
                        android:textSize="16sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="3dp"
                        android:id="@+id/tv_color_product_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="For Men"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|clip_vertical|center_horizontal"
                            android:text="Sold by"
                            android:textColor="@color/gray"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/iv_certified_seller"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/empty_cart" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_seller_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="India Sales,Mumbai"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_margin="3dp"
                    android:orientation="horizontal">

                    <org.fabiomsr.moneytextview.MoneyTextView
                        android:layout_margin="2dp"
                        android:id="@+id/tv_price_product_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        app:amount="99002"
                        app:baseTextColor="@color/black"
                        app:baseTextSize="18sp"
                        app:decimalDigitsTextSize="18sp"
                        app:decimalSeparator="."
                        app:format="##,###"
                        app:includeDecimalSeparator="true"
                        app:symbol="@string/rupee"
                        app:symbolGravity="start"
                        app:symbolTextSize="18sp" />

                    <TextView
                        android:layout_margin="2dp"
                        android:id="@+id/tv_mrp_product_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="123456"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <org.fabiomsr.moneytextview.MoneyTextView
                        android:layout_margin="3dp"
                        android:id="@+id/tv_discount_product_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        app:amount="10"
                        app:baseTextColor="@color/forest_green"
                        app:baseTextSize="18sp"
                        app:decimalDigitsTextSize="16sp"
                        app:decimalSeparator="."
                        app:format="##"
                        app:includeDecimalSeparator="true"
                        app:symbol="% Off"
                        app:symbolGravity="end"
                        app:symbolTextSize="18sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.omega_r.libs.OmegaCenterIconButton
                android:id="@+id/btn_add_to_wish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@color/white"
                android:text="Add to Wishlist"
                android:textAllCaps="false" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/dark_gray" />

            <com.omega_r.libs.OmegaCenterIconButton
                android:id="@+id/btn_remove_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@color/white"
                android:drawableStart="@drawable/ic_delete_black_24dp"
                android:text="Remove Item"
                android:textAllCaps="false" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>