<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_product_list"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="5dp"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:src="@drawable/intro_item2" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:weightSum="10">


                <TextView
                    android:id="@+id/tv_name_product_list"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="10"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_medium"
                    android:maxLines="2"
                    android:text="Mi LED Smart TV 4A 80cm(32)"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

                <TextView
                    android:id="@+id/tv_color_product_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="8"
                    android:text="Black"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:padding="2dp">

                <TextView
                    android:id="@+id/tv_rating_product_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="8"
                    android:background="@drawable/rating_round_corner"
                    android:drawableRight="@drawable/ic_star_black_24dp"
                    android:text="4.3"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_total_rating_product_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="8"
                    android:text="(455)"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <org.fabiomsr.moneytextview.MoneyTextView
                    android:id="@+id/tv_price_product_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:maxLines="1"
                    app:symbolTextColor="@color/green"
                    app:amount="99002"
                    app:baseTextColor="@color/black"
                    app:baseTextSize="18sp"
                    app:decimalDigitsTextSize="18sp"
                    app:decimalSeparator="."
                    app:format="##,###"
                    app:includeDecimalSeparator="true"
                    app:symbol="@string/rupee"
                    app:symbolGravity="start"
                    app:symbolTextSize="18sp" />

                <TextView
                    android:id="@+id/tv_mrp_product_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:layout_margin="2dp"
                    android:maxLines="1"
                    android:text="123456"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <org.fabiomsr.moneytextview.MoneyTextView
                    android:id="@+id/tv_discount_product_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:maxLines="1"
                    app:amount="10"
                    app:baseTextColor="@color/forest_green"
                    app:baseTextSize="18sp"
                    app:decimalDigitsTextSize="16sp"
                    app:decimalSeparator="."
                    app:format="##"
                    app:includeDecimalSeparator="true"
                    app:symbol="% Off"
                    app:symbolGravity="end"
                    app:symbolTextSize="18sp" />

            </LinearLayout>

        </LinearLayout>


        <com.like.LikeButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_weight="1"
            android:gravity="end|top"
            app:anim_scale_factor="2"
            app:circle_end_color="@color/colorAccent"
            app:circle_start_color="@color/colorPrimary"
            app:dots_primary_color="@color/colorAccent"
            app:dots_secondary_color="@color/colorPrimary"
            app:icon_size="20dp"
            app:icon_type="heart"
            app:like_drawable="@drawable/heart_on"
            app:unlike_drawable="@drawable/heart_off" />


    </LinearLayout>

</LinearLayout>

